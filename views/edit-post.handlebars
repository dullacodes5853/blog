
<div class="post card">
  <div class="card-header">
    <h2>Edit Post</h2>
  </div>
  <form id="update-post-form" class="card-body">
    <input type="hidden" id="post-id" value="{{post.id}}" />
    <label class="form-label" for="post-heading">Heading</label>
    <input type="text" id="post-heading" value="{{post.title}}" class="form-input" />
    <label class="form-label" for="post-text">Content</label>
    <textarea id="post-text" class="form-input">{{post.body}}</textarea>
    <button type="submit" class="btn">Update</button>
    <button type="button" id="delete-btn" class="btn">Delete</button>
  </form>
</div>


 