<div class="post card">
  <div class="card-header">
    <h2>Create New Post</h2>
  </div>
  <form id="new-post-form" class="card-body">
    <label class="form-label" for="post-heading">Heading</label>
    <input type="text" name="post-heading" class="form-input" />

    <label class="form-label" for="post-text">Content</label>
    <textarea name="post-text" class="form-input"></textarea>

    <button type="submit" class="btn">Create a post</button>
  </form>
</div>

<script src="/js/add.js"></script>